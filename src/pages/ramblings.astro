---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md(x)?', { eager: true }));
---

<Layout title="Ramblings">
	<main>
        <ul>
		{allPosts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
        </ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
</style>
